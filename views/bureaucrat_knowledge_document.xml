<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bureaucrat_knowledge_document_view_search" model="ir.ui.view">
        <field name="model">bureaucrat.knowledge.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="category_id"/>
                <field name="tag_ids"/>
                <field name="search_tag_id"/>
                <field name="search_no_tag_id"/>
                <filter name="filter_archived"
                        string="Archived"
                        domain="[('active', '=', False)]"/>
                <filter name="filter_active"
                        string="Active"
                        domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="bureaucrat_knowledge_document_view_tree" model="ir.ui.view">
        <field name="model">bureaucrat.knowledge.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
                <field name="tag_ids"
                       options="{'color_field': 'color'}"
                       widget="many2many_tags"
                       placeholder="Tags..."
                       context="{'default_model': 'bureaucrat.knowledge.document'}"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="bureaucrat_knowledge_document_view_form" model="ir.ui.view">
        <field name="model">bureaucrat.knowledge.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="base.group_user"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div name="title" class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                        <h3>
                            <field name="tag_ids"
                                   options="{'color_field': 'color'}"
                                   widget="many2many_tags"
                                   placeholder="Tags..."
                                   context="{'default_model': 'bureaucrat.knowledge.document'}"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="category_id"/>
                        </group>
                        <group></group>
                    </group>
                    <notebook>
                        <page name="document_body" string="Document">
                            <field name="commit_summary" class="oe_edit_only" placeholder="Commit summary ..."/>
                            <field name="document_body"/>
                        </page>
                        <page name="document_history" string="Document History" mode="tree, form">
                            <field name="history_ids">
                                <tree create="0" delete="0">
                                    <field name="commit_summary"/>
                                    <field name="user_id"/>
                                    <field name="date_create"/>
                                </tree>
                                <form>
                                    <field name="commit_summary"/>
                                    <field name="document_body"/>
                                    <group>
                                        <group>
                                            <field name="user_id" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="date_create" readonly="1"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name="document_settings" string="Settings">
                            <!-- TODO: have to be visible only for owners -->
                            <div>
                                <group>
                                    <group string="Visibility settings">
                                        <field name="visibility_type"/>
                                        <field name="actual_visibility_category_id"
                                               attrs="{'invisible': [('visibility_type', '!=', 'parent')]}"/>
                                        <field name="visibility_group_ids"
                                               string="Reader Group"
                                               widget="many2many_tags"/>
                                        <field name="visibility_user_ids"
                                               string="Reader User"
                                               widget="many2many_tags"/>
                                    </group>
                                    <group string="Editor groups" colspan="4">
                                        <group>
                                            <field name="editor_group_ids"
                                                   string="Group"
                                                   widget="many2many_tags"/>
                                        </group>
                                        <group>
                                            <field name="actual_editor_group_ids"
                                                   string="Actual Group"
                                                   widget="many2many_tags"/>
                                        </group>
                                    </group>
                                    <group string="Editor users" colspan="4">
                                        <group>
                                            <field name="editor_user_ids"
                                                   string="Users"
                                                   widget="many2many_tags"/>
                                        </group>
                                        <group>
                                            <field name="actual_editor_user_ids"
                                                   string="Actual Users"
                                                   widget="many2many_tags"/>
                                        </group>
                                    </group>
                                    <group string="Owner groups" colspan="4">
                                        <group>
                                            <field name="owner_group_ids"
                                                   string="Group"
                                                   widget="many2many_tags"/>
                                        </group>
                                        <group>
                                            <field name="actual_owner_group_ids"
                                                   string="Actual Group"
                                                   widget="many2many_tags"/>
                                        </group>
                                    </group>
                                    <group string="Owner users" colspan="4">
                                        <group>
                                            <field name="owner_user_ids"
                                                   string="Users" 
                                                   widget="many2many_tags"/>
                                        </group>
                                        <group>
                                            <field name="actual_owner_user_ids"
                                                   string="Actual Users"
                                                   widget="many2many_tags"/>
                                        </group>
                                    </group>
                                </group>
                            </div>
                        </page>
                        <page name="page_other" string="Other">
                            <group name="group_other_root">
                                <group name="group_other_left">
                                    <field name="ir_model_data_id"
                                           groups="base.group_no_one"/>
                                    <field name="ir_model_data_xmlid"/>
                                    <field name="ir_model_data_no_update"
                                           widget="boolean_toggle"/>
                                </group>
                                <group name="group_other_right">
                                </group>
                            </group>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_bureaucrat_knowledge_document" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bureaucrat.knowledge.document</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
