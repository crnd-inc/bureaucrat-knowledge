<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bureaucrat_knowledge_document_view_search" model="ir.ui.view">
        <field name="model">bureaucrat.knowledge.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="category_id"/>
            </search>
        </field>
    </record>

    <record id="bureaucrat_knowledge_document_view_tree" model="ir.ui.view">
        <field name="model">bureaucrat.knowledge.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
            </tree>
        </field>
    </record>

    <record id="bureaucrat_knowledge_document_view_form" model="ir.ui.view">
        <field name="model">bureaucrat.knowledge.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div name="title" class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category_id"/>
                        </group>
                        <group></group>
                    </group>
                    <notebook>
                        <page name="document_body" string="Document">
                            <field name="document_body"/>
                        </page>
                        <page name="document_history" string="Document History">
                            <field name="history_ids">
                                <tree create="0" delete="0">
                                    <field name="commit_summary"/>
                                    <field name="user_id"/>
                                    <field name="date_create"/>
                                </tree>
                            </field>
                            <field name="commit_summary" class="oe_edit_only"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
</odoo>
