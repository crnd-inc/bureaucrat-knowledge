<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bureaucrat_knowledge_document_history_view_tree" model="ir.ui.view">
        <field name="model">bureaucrat.knowledge.document.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="document_id"/>
                <field name="commit_summary"/>
                <field name="user_id"/>
                <field name="date_create"/>
            </tree>
        </field>
    </record>

    <record id="bureaucrat_knowledge_document_history_view_form" model="ir.ui.view">
        <field name="model">bureaucrat.knowledge.document.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="document_id"/>
                        </group>
                        <group>
                            <field name="commit_summary"/>
                        </group>
                    </group>
                    <field name="document_type" invisible="True"/>
                    <field name="document_body"
                           attrs="{'invisible': [('document_type', '!=', 'html')]}"/>
                    <field name="document_body_pdf"
                           attrs="{'invisible': [('document_type', '!=', 'pdf')]}"
                           widget="pdf_viewer"/>
                    <group>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="date_create"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
